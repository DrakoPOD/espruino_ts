{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom" // setInterval, console
        ],
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "paths": {
            "*": ["./types/*"]
        },
        "allowJs": false
    },
    "exclude": ["node_modules"],
    "include": ["src/*.ts"]
}
